{
  "name": "koa-parcel-middleware",
  "description": "parcel bundler koa middleware",
  "version": "0.0.0-semantic-release",
  "main": "src/middleware.js",
  "files": ["src/middleware.js", "src/middleware.d.ts", "src/middleware.d.ts.map"],
  "author": "cdaringe <cdaringe@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "koa": ">2",
    "koa-static": ">4"
  },
  "devDependencies": {
    "@types/koa": "^2.0.48",
    "@types/koa-static": "^4.0.1",
    "@types/parcel-bundler": "^1.10.2",
    "@typescript-eslint/parser": "^1.5.0",
    "husky": "^1.3.1",
    "koa": "^2.7.0",
    "koa-static": "^5.0.0",
    "lint-staged": "^8.1.5",
    "prettier-standard": "^9.1.1",
    "standard": "^12.0.1",
    "typescript": "^3.3.4000"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier-standard '{src,test,scripts}/**/*.{js,jsx,ts,tsx}'",
    "lint": "standard '{src,test,scripts}/**/*.{js,jsx,ts,tsx}'",
    "test": "echo ':('"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "{src,test,scripts}/**/*.{js,jsx,ts,tsx}": [
        "yarn format",
        "yarn lint",
        "git add"
      ]
    }
  },
  "standard": {
    "parser": "@typescript-eslint/parser",
    "standardPlugins": [
      "typescript"
    ],
    "ignore": [
      "**/*.d.ts"
    ]
  }
}
